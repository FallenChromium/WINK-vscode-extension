{
	"compilerOptions": {
		"target": "es6",
		"lib": ["es6"],
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true,
		"outDir": "out",
		"rootDir": "src",
		"esModuleInterop": true,
		"allowJs": true,
		"declaration": true,
		"declarationMap": true,
	},
	"include": ["src"],
	"exclude": ["node_modules"]
	
}
